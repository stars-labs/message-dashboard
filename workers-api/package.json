{
  "name": "sms-dashboard-api",
  "version": "1.0.0",
  "description": "Cloudflare Workers API for SMS Dashboard",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build:frontend": "cd .. && npm run build && cd workers-api && node build-unified.js",
    "build:unified": "npm run build:frontend && wrangler deploy",
    "db:init": "wrangler d1 execute sms-dashboard --local --file=./schema.sql",
    "db:migrate": "wrangler d1 execute sms-dashboard --file=./schema.sql"
  },
  "dependencies": {
    "itty-router": "^4.0.0",
    "jose": "^6.0.11",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}
